<% include ../../include/header.ejs %>

<div class="row tip-message">
	<% if (data.message == 'success') { %>
		<div class="bg-success">
			<p class="text-success">用户信息添加成功</p>
		</div>
	<% } %>
	<% if (data.message == 'error') { %>
		<div class="bg-danger">
			<p class="text-danger">用户信息添加失败</p>
		</div>
	<% } %>
</div>
<div class="row paper-header">
	<h2>添加用户</h2>
</div>
<div class="row paper-content">
	<form action="/user/userinsert" role="form" method='post'>
		<div class="form-group">
			<label for="name">用户名</label>
			<input type="text" name='name' id='name' class="form-control" placeholder='请输入用户名'> 
		</div>
		<div class="form-group">
			<label for="age">年龄</label>
			<input type="text" name='age' id='age' class="form-control" placeholder='请输入用户年龄'>
		</div>
		<div class="form-group">
			<label for="sex">性别</label>
			<input type="text" name='sex' id='sex' class="form-control" placeholder='请输入用户年龄'>
		</div>
		<div class="form-group">
			<label for="phone">电话</label>
			<input type="text" name='phone' id='phone' class="form-control" placeholder='请输入用户电话'>
		</div>
		<div class="form-group">
			<label for="job">工作</label>
			<input type="text" name='job' id='job' class="form-control" placeholder='请输入用户工作'>
		</div>
		<button type="submit" class="btn btn-primary add-user">提交</button>
		<a href="/user/userlist" class="btn btn-default add-user">返回列表页</a>
	</form>
</div>

<% include ../../include/footer.ejs %>


