<% include ../../include/header.ejs %>

<div class="row paper-header">
	<h2>用户列表</h2>
</div>
<div class="row paper-content">
	<div class="table-box">
		<table class="table table-striped table-hover">
			<thead class="bg-primary">
				<tr>
					<th width="10%">#</th>
					<th width="14%">姓名</th>
					<th width="14%">年龄</th>
					<th width="14%">性别</th>
					<th width="14%">电话</th>
					<th width="15%">工作</th>
					<th width="17%">操作</th>
				</tr>
			</thead>
			<tbody class="user-list">
				<% data.forEach(function(item){%>
					<tr>
						<td class='user-id'><%= item.id%></td>
						<td><%= item.name%></td>
						<td><%= item.age%></td>
						<td><%= item.sex%></td>
						<td><%= item.phone%></td>
						<td><%= item.job%></td>
						<td>
							<a href="javascript:;" class="text-info edit-info bg-info">修改</a>
							<a class="text-danger del-info bg-danger">删除</a>
						</td>
					</tr>
				<%})%>
			</tbody>
		</table>
	</div>
	<% include ../../include/pagenation.ejs %>
	<a href="userinsert" class="btn btn-primary add-user">添加用户</a>
</div>

<% include ../../include/footer.ejs %>

